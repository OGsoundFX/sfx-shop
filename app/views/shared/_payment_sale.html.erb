<% @order.packs.each do |pack| %>
  <div class="d-flex justify-content-between">
    <div class="d-flex">
      <div><%= image_tag SfxPack.find(pack).photos[0], width: "50px" %></div>
      <div class="d-flex flex-column justify-content-center pack-details">
        <% if @current_sales_list[pack] %>
          <p>Purchase of <span class="pack-name-price"><%= SfxPack.find(pack).title %></span> for <span class="pack-name-price"><%= humanized_money_with_symbol (SfxPack.find(pack).price * (1 - (@current_sales_list[pack] / 100.to_f))) %></span></p>
        <% else %>
          <p>Purchase of <span class="pack-name-price"><%= SfxPack.find(pack).title %></span> for <span class="pack-name-price"><%= humanized_money_with_symbol SfxPack.find(pack).price %></span></p>
        <% end %>
      </div>
    </div>
    <div class="d-flex flex-column justify-content-center">
      <div class="cart-form-remove">
        <%= form_tag remove_item_path do %>
          <%= hidden_field_tag 'pack_id', pack %>
          <%= button_tag(type: "submit", id: "checkout-btn-remove") do %>
              <i class="fal fa-times"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
