<div class="slideshow-container">
  <div>
    <% if @current_sales_list != {} %>
      <%= image_tag asset_path('Promo_sale.png'), id: "promo20" %>
      <%= image_tag asset_path('x-mas.png'), id: "seasonal-promo", class: "d-none" %>
    <% else %>
      <%= image_tag asset_path('Promo20_2.png'), id: "promo20" %>
      <%= image_tag asset_path('x-mas.png'), id: "seasonal-promo", class: "d-none" %>
    <% end %>
  </div>

  <% if session[:subscribed] != true && (@status == "Not Subscribed" || @status == "unsubscribed") || session[:modal_closed] %>
    <% if @status == "unsubscribed" %>
      <div id="subscribe-btn" class="<%= 'd-none' if session[:modal_closed].nil? %> <%= 'd-none' if session[:modal_closed] == false %>">
        <%= link_to "Subscribe to our newsletter", subscribe_path %>
      </div>
    <% end %>
  <% end %>

  <button id="subscribe-btn" class="<%= 'd-none' if session[:modal_closed].nil? %> <%= 'd-none' if session[:modal_closed] == false %> <%= 'd-none' if session[:subscribed] %> <%= 'd-none' if !@status.nil? %>" data-action="click->open-subscribe-modal#open" data-open-subscribe-modal-target="button">Subscribe to our newsletter</button>

  <div id="subscribe-form" class="d-none" data-open-subscribe-modal-target="subscribeForm">
    <div class="d-flex">
      <%= simple_form_for :email, url: subscribe_no_user_path do |f| %>
        <%= hidden_field_tag 'subscribed', true %>
        <div class="d-flex justify-content-between subscribe-field">
          <div>
            <%= f.input :email, label: false, placeholder: "Enter your email here", required: true %>
          </div>
          <div>
            <%= f.button :submit, 'Subscribe', id: 'subscribe', class: 'btn btn-primary', data: { action: "click->open-subscribe-modal#close" } %>
          </div>
        </div>
      <% end %>
      <div class="close" data-action="click->open-subscribe-modal#close" id="close-subscribe">&times;</div>
    </div>
  </div>

  <section id="scroll-down">
    <a href="#front-title"><span></span></a>
  </section>

  <div class="">
    <img class="slideshow-images" src="https://res.cloudinary.com/dk9a86uhu/image/upload/v1631081625/carousel/forest-931706_1920_hywbfq.jpg">
    <div class="collection-banner-content">
      <div><span id="create-your-collection">Create Your Collection!!!</span></div>
      <div data-controller="video-modal">
        <div id="collection-video-btn" data-video-modal-target="button" data-action="click->video-modal#openModal">
          Watch video &nbsp<i class="fas fa-play"></i>
        </div>  
        <!-- The Modal -->
        <div data-video-modal-target="videoModal" class="video-modal">

          <!-- Modal content -->
          <!--  <span class="video-modal-close" data-video-modal-target="close" data-action="click->video-modal#closeModal">&times;</span> -->
          <div class="video-modal-content">
            <iframe width="840" height="472" src="https://www.youtube.com/embed/X9utcnnj9Mo" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen ></iframe>
            <div class="d-flex justify-content-between video-modal-buttons">
              <button></button>
              <%= link_to "Create Your Collection Now", list_path, id: "tracks" %>
              <button id="close" data-video-modal-target="close" data-action="click->video-modal#closeModal">Close</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
