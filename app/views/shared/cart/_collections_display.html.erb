<div style="margin-top: 26px"></div>
<div class="packs-display" data-unwrap-cart-target="collectionUnwrapped">
  <div class="d-flex justify-content-between">
    <div class="d-flex">
      <i class="fas fa-compact-disc cart-icon-adjust"></i>
      <h3 class="cart-sfx-packs-title"> <strong>COLLECTION</strong> </h3>
    </div>
    <div>
      <i class="fal fa-angle-down" data-action="click->unwrap-cart#wrap" id="collection-arrow"></i>
    </div>
  </div>
  <hr>
  <% if !@current_collections.empty? %>
    <% @current_collections.each_with_index do |collection, index| %>
      <% if collection.title.nil? %>
        <div class="container">
          <p>Your collection nÂ°<%= index + 1 %></p>
        </div>
        <ul class="container">
        <% collection.tracks.each do |track| %>
          <li>
            <p><%= SingleTrack.find(track).title %></p>
          </li>
        <% end %>
        </ul>
      <% else %>
        <p><%= collection.title %></p>
        <ul>
          <% collection.tracks.each do |track| %>
            <li>
              <p><%= SingleTrack.find(track).title %></p>
            </li>
          <% end %>
        </ul>
      <% end %>
    <% end %>
  <% end %>
</div>

<div class="packs-display packs-display-closed d-none" data-unwrap-cart-target="collectionWrapped">
  <div class="d-flex justify-content-between">
    <div class="d-flex">
      <i class="fas fa-compact-disc cart-icon-adjust"></i>
      <h3 class="cart-sfx-packs-title"> <strong>COLLECTION</strong> </h3>
    </div>
    <div>
      <i class="fal fa-angle-up" data-action="click->unwrap-cart#wrap" id="collection-arrow"></i>
    </div>
  </div>
</div>