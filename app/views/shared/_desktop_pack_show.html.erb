<div class="">
  <div class="card shadow sfx_card__border overflow-hidden">
    <div class="row g-0">
      <!-- Cover Image -->
      <div class="col-md-5 sfx_card__image">
        <%= image_tag @pack.photos.first, alt: "Weather Effects Cover", class: "img-fluid sfx_card__cover" %>
      </div>

      <!-- Text Content -->
      <div class="col-md-7 sfx_card__description">
        <div class="card-body d-flex flex-column h-100">

          <div class="d-flex flex-column h-100 justify-content-between">
            <% if @pack.currency_symbol != session[:currency] %>
              <% conversion_rate = CurrencyRate.where("base = ? AND target = ?", @pack.currency.upcase, CurrencySymbolService.lookup(session[:currency]).upcase).order(created_at: :desc).first.rate.to_f %>
            <% else %>
              <% conversion_rate = 1 %>
            <% end %>
            <div>
              <!-- Title and Rating -->
              <div class="mb-2">
                <h3 class="card-title mb-1"><%= @pack.title %></h3>
                <% if @pack.average_rating.present? %>                  
                  <p class="text-warning mb-2">
                    <strong><%= @pack.average_rating %></strong> <i class="fas fa-star"></i>
                  </p>
                <% else %>
                  <em>(No ratings yet)</em>
                <% end %>
              </div>

              <!-- Description -->
              <p class="card-text text-muted mb-3">
                <strong>Description:</strong> <%= @pack.description %>
              </p>

              <!-- Metadata -->
              <div class="mb-3 text-muted small">
                <p class="mb-1">• <%= @pack.sample_rate == 44100 ? @pack.sample_rate / 1000.0 : @pack.sample_rate / 1000 %>kHz / <%= @pack.bit_depth %>bit High Def Audio</p>
                <% if @pack.size_mb > 1000 %>
                  <p class="mb-1">• <%= (@pack.size_mb / 1000.to_f).ceil(1) %> GB</p>
                <% else %>
                  <p class="mb-1">• <%= @pack.size_mb %> MB</p>
                <% end %>
                <p class="mb-1">• <%= @pack.number_of_tracks %> Sounds</p>
                <p class="mb-0">• Format: WAV</p>
              </div>
            </div>

            <!-- Tags -->
            <div class="flex flex-wrap gap-2 pb-2">
              <% @pack.tags.split(", ").each do |tag| %>
                <span class="text-white text-xs font-medium px-2 py-1 badge rounded-pill sfx-card__pills-color"><%= tag %></span>
              <% end %>
            </div>
          </div>

          <!-- Author and Actions -->
          <div class="mt-auto d-flex justify-content-between align-items-center pt-3 border-top">
            <div class="d-flex align-items-center gap-2">
              <%= link_to sound_designer_path(@pack.sound_designer) do %>
                <% if @pack.sound_designer.photo.attached? %>
                  <%= image_tag @pack.sound_designer.photo, alt: "#{@pack.sound_designer.artist_name}", class: "rounded-circle sfx_card__designer_pic" %>
                <% else %>
                  <%= image_tag "logo/logo_BAM_5.png" , alt: "#{@pack.sound_designer.artist_name}", class: "rounded-circle sfx_card__designer_pic"  %>
                <% end %>
                <span style="margin-left: 8px; font-size: 0.9rem"><%= @pack.sound_designer.artist_name %></span>
              <% end %>
            
            </div>
            <div class="sfx_card__price">
              <p class="fs-5 fw-semibold mb-1">
                <% if @discount %>
                  <div>
                    <div>
                      <h3><%= humanized_money((@pack.price * conversion_rate) * ((100 - @discount) / 100.to_f), symbol: session[:currency]) %></h3>
                    </div>
                    <div>
                      <p> <strike><%= humanized_money(@pack.price * conversion_rate, symbol: session[:currency]) %></strike> </p>
                    </div>
                  </div>
                <% else %>
                  <div class="d-flex justify-content-end">
                    <h3><%= humanized_money(@pack.price * conversion_rate, symbol: session[:currency]) %></h3>
                    <% if @pack.currency_symbol != session[:currency] %>
                      <em style="margin-top: 6px; margin-left: 4px">(<%= humanized_money(@pack.price, symbol: @pack.currency_symbol) %>)</em>
                    <% end %>
                  </div>
                <% end %>
              </p>

              <div class="d-flex gap-2">
                <% if @pack.sku.include?("FS") %>
                  <%= button_to "Download", @pack.product_link, method: :get, class: "btn text-white btn-sm ml-2", style: "background-color: #ff00fe;" %>
                <% else %>
                  <%= form_tag orders_path do %>
                    <%= hidden_field_tag 'pack_id', @pack.id %>
                    <%= submit_tag 'Buy now', class: "btn btn-outline-secondary btn-sm" %>
                  <% end %>
                  <%= form_tag cart_order_path do %>
                    <%= hidden_field_tag 'pack_id', @pack.id %>
                    <%= submit_tag 'Add to Cart', class: "btn text-white btn-sm ml-2 add-to-cart-hover" %>
                  <% end %>
                <% end %>
              </div>

            </div>
          </div>

        </div> <!-- /card-body -->
      </div>
    </div> <!-- /row -->
  </div> <!-- /card -->
</div>