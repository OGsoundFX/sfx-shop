<%= render 'shared/navbar_general' %>
<div class="container margin-top">
  <h1>Collection</h1>
  <ul>
    <% @tracks.each do |track| %>
    <li>
      <%= track.title %>
      <%= humanized_money_with_symbol(track.price) %>
      <span>
        <%= track.sound_designer.first_name %> <%= track.sound_designer.last_name %>
      </span>
      <button onclick="const audio = new Audio('<%= track.link %>'); audio.play()">Play</button>
      <div class="wave" id="id<%= track.id %>" data-link="<%= track.link %>"></div>
      <i class="far fa-play-circle" id="playid<%= track.id %>"></i>
      <i class="far fa-pause-circle" id="stopid<%= track.id %>" style="display: none"></i>
    </li>
    <% end %>
  </ul>
</div>

