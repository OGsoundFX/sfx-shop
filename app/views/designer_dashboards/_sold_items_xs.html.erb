<div class="designer-dashboard__sales-grid">
  <div>Date</div>
  <div class="text-center">Listing</div>
  <div class="text-end">Price</div>
</div>
<% @sold_items.each do |item| %>
  <%= render "sold_item_card_xs", item: item %>
<% end %>
<% if @past_sold_items.present? && @sold_items.present? %>
  <hr style="border-color: white; margin-top: 24px">
<% elsif !@sold_items.present? %>
  <div class="designer-dashboard__no-payout">
    <h4>There are no sales for this period</h4>
  </div>
<% end %>
<% @past_sold_items.each do |item| %>
  <%= render "sold_item_card_xs", item: item %>
<% end %>
