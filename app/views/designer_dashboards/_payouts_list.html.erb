<div class="designer-dashboard__sales-grid">
  <div class="d-flex align-items-center">
    <div class="submission-card-date-title">
      <div>Date Paid</div>
    </div>
    <div class="submission-card-content d-flex align-items-center">
      <div>Paypal account</div>
    </div>
  </div>

  <div class="payout-card-titles-price designer-dashboard__payout-amount">
    <span>Amount paid</span>
    <span>Items sold</span>
  </div>
  <div class="designer-dashboard__payout-amount">
    <span>Time period</span>
  </div>
</div>
<% if @payouts.empty? %>
  <div class="designer-dashboard__no-payout">
    <h4>No payouts for the year <%= @year %></h4>
  </div>
<% end %>
<% @payouts.each do |payout| %>
  <div class="designer-dashboard__sales-grid">
    <div class="d-flex align-items-center">
      <div class="payouts-card-date">
        <div class="submission-day"><%= payout.created_at.strftime("%b") %> <%= payout.created_at.strftime("%d") %></div>
        <div class="submission-day"><%= payout.created_at.strftime("%Y") %></div>
      </div>
      <div class="submission-card-content d-flex align-items-center">
        <div><%= payout.paypal_account %></div>
      </div>
    </div>

    <div class="payout-card-titles-price">
      <div class="designer-dashboard__payout-amount">
        <div class="submission-date"><%= number_to_currency(payout.amount_cents / 100.0, unit: "#{CurrencySymbolService.lookup(payout.currency)} ", separator: ",", precision: 2) %></div>
      </div>
      <div class="d-flex align-items-center justify-content-center items-sold__section" data-controller="items-sold">
        <div class="btn btn-secondary" data-action="click->items-sold#modal">Show list</div>
        <div class="items-sold__modal d-none" data-items-sold-target="soldItems">
          <div>
            <% payout.sold_items.each do |item| %>
              <span class="items-sold__list-title">â€¢ <%= item.sfx_pack.title %> (<%= item.created_at.strftime("%b-%y") %>)</span>
              <br>
            <% end %>
          </div>
          <div class="btn btn-secondary mt-3" data-action="click->items-sold#close">
            Close
          </div>
        </div>
      </div>
    </div>
    <div class="designer-dashboard__payout-amount">
      <span>
        <% if payout.sold_items.order(:created_at).first.created_at.month == payout.sold_items.order(:created_at).last.created_at.month %>
          <%= payout.sold_items.order(:created_at).first.created_at.strftime("%B %y") %>
        <% else %>
          <%= payout.sold_items.order(:created_at).first.created_at.strftime("%b. %y") %> to <%= payout.sold_items.order(:created_at).last.created_at.strftime("%b. %y") %>
        <% end %>
      </span>
    </div>
  </div>
<% end %>