<div class="banner">
  <h1 class="padding-navbar font-permanent-marker">Browse our SFX Packs!!!</h1>
  <div style="height: 100px"></div>
</div>
<div>
  <div id="body">
    <%= render "shared/left_pannel_mobile" %>
    <div class="d-flex">
      <%= render "shared/left_pannel_desktop" %>
      <div class="mx-3 w-100">
        <div>
          <% if !@announcement.nil? %>
            <h1 id="annoucement-content"><%= @announcement.content %></h1>
          <% elsif @current_sales_list != {} %>
            <div id="sale-banner">
              <h1 id="front-title-sale-index"><span style="font-size: 1.2em"><%= @sale_title %></span> !!!  Save up to <span style="font-size: 1.2em"> <%= @sale_percentage %>% </span> !!!</h1>
            </div>
          <% end %>

          <div class="forms">
            <div class="drop-down">
              <form action="/sfx_packs" data-controller="category">
                <input type="hidden" name="category" value="<%= @dropdown %>" data-category-target="dropdown">
                <input type="hidden" name="filters" value="" data-filters-target="dropdown">
                <div class="d-flex justify-content-start">
                  <div>
                    <select type="text" name="dropdown" placeholder="category">
                      <% unless @category %>
                        <option value="" selected disabled hidden>Pick a category</option>
                      <% end %>
                      <option value="all" data-category-target="all">All</option>
                      <% @categories.each do |cat| %>
                        <option value="<%= cat.to_s %>" data-category-target="<%= cat.to_s.split("-").join %>" <%= 'selected' if cat.to_s.split("-").join == @category %>><%= cat.to_s.capitalize %></option>
                      <% end %>
                      <option value="free" data-category-target="free">Free</option>
                    </select>
                  </div>
                  <div>
                    <input type="submit" value="GO">
                  </div>
                </div>
              </form>
            </div>
            <div class="search-form-or"><strong>OR</strong></div>
            <div class="search-form">
              <form action="/sfx_packs">
                <input type="text" name="search" placeholder="<%= @search.present? ? @search : 'Search by keyword' %>">
                <button type="submit" class="submit-button"><i class="fas fa-search"></i></button>
              </form>
            </div>
          </div>

          <hr id="search-hr">
          <% if @sfx_packs.empty? %>
            <div class="text-center" style="font-size: 1.2rem">
              No results for <%= @search.present? ? @search : params[:dropdown] %>
            </div>
          <% else %>
            <%= render 'shared/pack_card' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= render 'shared/subscribe_modal' %>
</div>
