<div class="designer-dashboard__sales-grid">
  <div class="d-flex align-items-center">
    <div class="payouts-card-date">
      <div class="submission-day"><%= payout.payout_date.strftime("%b") %> <%= payout.payout_date.strftime("%d") %></div>
      <div class="submission-day"><%= payout.payout_date.strftime("%Y") %></div>
    </div>
    <div class="submission-card-content d-flex align-items-center">
      <div><%= payout[:paypal_account] %></div>
    </div>
  </div>

  <div class="sales-card-titles-price">
    <div class="d-flex align-items-center">
      <%= link_to sound_designer_path(payout.legal_entity.user.sound_designer), target: "_blank" do %>
        <%= payout.legal_entity.first_name %> <%= payout.legal_entity.last_name %>
      <% end %>
    </div>
    <div class="d-flex align-items-center">
      <div class="submission-date"><%= number_to_currency(payout.amount_cents / 100.0, unit: "#{CurrencySymbolService.lookup(payout.currency)} ", separator: ",", precision: 2) %></div>
    </div>
    <div class="d-flex align-items-center items-sold__section" data-controller="items-sold">
      <div class="btn btn-secondary" data-action="click->items-sold#modal">Show list</div>
      <div class="items-sold__modal d-none" data-items-sold-target="soldItems">
        <div>
          <% payout.sold_items.each do |item| %>
            <span class="items-sold__list-title">â€¢ <%= item.sfx_pack.title %> (<%= item.created_at.strftime("%b-%y") %>)</span>
            <br>
          <% end %>
        </div>
        <div class="btn btn-secondary mt-3" data-action="click->items-sold#close">
          Close
        </div>
      </div>
    </div>
  </div>
  <div class="sales-card-titles-buyer">
    <span>
      <% if payout.sold_items.order(:created_at).last.created_at.strftime("%b %y") == payout.sold_items.order(:created_at).first.created_at.strftime("%b %y") %>
        <%= payout.sold_items.order(:created_at).last.created_at.strftime("%b %y") %>
      <% else %>
        <%= payout.sold_items.order(:created_at).first.created_at.strftime("%b %y") %> - <%= payout.sold_items.order(:created_at).last.created_at.strftime("%b %y") %>
      <% end %>
    </span>
    <div>
      <span class="btn btn-success">Paid</span>
    </div>
  </div>
</div>